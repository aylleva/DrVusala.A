	<script>
		const hamburger = document.querySelector(".hamburger");
		const menu = document.getElementById("mainmenu");

		hamburger.addEventListener("click", () => {
		  menu.classList.toggle("menu-open");
		});
	</script>
	
	
</body>
</html>