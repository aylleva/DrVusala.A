@using Doctor.Application.Interfaces.Services
@inject ILayoutService _layoutservice
@{
	Dictionary<string, string> contacts = await _layoutservice.GetLayoutAsync();
}
<!DOCTYPE html>
<html lang="en">
<head>
	<title>Dr.Vusala</title>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="description" content="Dr PRO template project">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="~/assets/styles/bootstrap-4.1.2/bootstrap.min.css">
	<link href="~/assets/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
	<link rel="stylesheet" type="text/css" href="~/assets/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
	<link rel="stylesheet" type="text/css" href="~/assets/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
	<link rel="stylesheet" type="text/css" href="~/assets/plugins/OwlCarousel2-2.2.1/animate.css">
	<link href="~/assets/plugins/jquery-datepicker/jquery-ui.css" rel="stylesheet" type="text/css">
	<link rel="stylesheet" type="text/css" href="~/assets/styles/main_styles.css">
	<link rel="stylesheet" type="text/css" href="~/assets/styles/responsive.css">
	<link rel="icon" type="image/x-icon" href="~/assets/images/icon_4.svg">
	
</head>
<body>

	<div class="super_container">

		<!-- Header -->

		<header class="header trans_400">
			<div class="header_content d-flex flex-row align-items-center jusity-content-start trans_400">

				<!-- Logo -->
				<div class="logo">
					<a href="#">
						<div>Dr.<span>Vusala</span></div>
						<div>Doctor&Cosmetologist</div>
					</a>
				</div>

				<!-- Main Navigation -->
				<nav class="navbar navbar-expand-lg navbar-light bg-light main_nav">
					<ul id="mainmenu" class="d-flex flex-row align-items-center justify-content-start">
						<li class="active"><a asp-controller="home" asp-action="index"> Ana Səhifə</a></li>
						<li><a asp-controller="about" asp-action="index">Haqqımızda</a></li>
						<li><a asp-controller="procedures" asp-action="index">Prosedurlar</a></li>
					</ul>
				</nav>
				<div class="header_extra d-flex flex-row align-items-center justify-content-end ml-auto">
					<!-- Header Social -->
					<div class="social header_social">
						<ul class="d-flex flex-row align-items-center justify-content-start">
							<li><a target="_blank" href="@contacts["İnsta"]"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
							<li><a target="_blank" href="@contacts["Facebook"]"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
							<li><a target="_blank" href="@contacts["Whatsup"]"><i class="fa fa-whatsapp" aria-hidden="true"></i></a></li>
						</ul>
					</div>

					<!-- Hamburger -->
					<div class="hamburger"><i class="fa fa-bars" aria-hidden="true"></i></div>
				</div>
			</div>
		</header>
		<!-- Menu -->

		<div class="menu_overlay trans_400"></div>
		<div class="menu trans_400">
			<div class="menu_close_container"><div class="menu_close"><div></div><div></div></div></div>
			<nav class="menu_nav">
				<ul>
					<li class="active"><a asp-controller="home" asp-action="index"> Ana Səhifə</a></li>
					<li><a asp-controller="about" asp-action="index">Haqqımızda</a></li>
					<li><a asp-controller="procedures" asp-action="index">Prosedurlar</a></li>
				</ul>
			</nav>
			<div class="menu_extra">
				<div class="menu_link">Bazar Ertəsi - Bazar: 10:00am - 18:00pm</div>
				<div class="menu_link"><a>+994-77-389-89-96</a></div>
				
			</div>
			<div class="social menu_social">
				<ul class="d-flex flex-row align-items-center justify-content-start">
					<li><a target="_blank" href="@contacts["İnsta"]"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
					<li><a target="_blank" href="@contacts["Facebook"]"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
					<li><a target="_blank" href="@contacts["Whatsup"]"><i class="fa fa-whatsapp" aria-hidden="true"></i></a></li>
				</ul>
			</div>
		</div>

        @RenderBody()

		<footer class="footer">
			<div class="footer_content">
				<div class="container">
					<div class="row">

						<!-- Footer About -->
						<div class="col-lg-3 footer_col">
							<div class="footer_about">
								<div class="footer_logo">
									<a href="#">
										<div>Dr.<span>Vusala</span></div>
										<div>Doctor&Cosmetologist</div>
									</a>
								</div>
								<div class="footer_about_text">
									<p>Konsultasiyaya yazılmaq,həkimlə əlaqa saxlamaq üçün e-poçt,əlaqə nömrəsi və ya sosial media platformalarından bizi izləyərək əlaqə saxlaya bilərsiniz.</p>
								</div>
							</div>
						</div>

						<!-- Footer Contact Info -->
						<div class="col-lg-3 footer_col">
							<div class="footer_contact">
								<div class="footer_title">Kontaktlar</div>
								<ul class="contact_list">
									<li>@contacts["Number"]</li>
									<li>@contacts["Email"]</li>
									
								</ul>
							</div>
							<br>
							<div class="social header_social">
								<ul class="d-flex d-md-flex align-items-center justify-content-start">
									<li><a class="social-icons" target="_blank" href="@contacts["İnsta"]"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
									<li><a class="social-icons"  target="_blank" href="@contacts["Facebook"]"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
									<li><a class="social-icons" target="_blank" href="@contacts["Whatsup"]"><i class="fa fa-whatsapp" aria-hidden="true"></i></a></li>
								</ul>
							</div>
						</div>
						

						<!-- Footer Locations -->
						<div class="col-lg-3 footer_col">
							<div class="footer_location">
								<div class="footer_title">Ünvanımız</div>
								<ul class="locations_list">
									<li>
										<div class="location_title">Bakı Şəhəri</div>
										<div class="location_text">@contacts["Adres"]</div>
									</li>
									<li>
										<div class="location_title"><a target="_blank" href="@contacts["Location"]">Ünvan Lokasiyası</a></div>
										
									</li>
								</ul>
							</div>
						</div>

						<!-- Footer Opening Hours -->
						<div class="col-lg-3 footer_col">
							<div class="opening_hours">
								<div class="footer_title">Saatlar</div>
								<ul class="opening_hours_list">
									<li class="d-flex flex-row align-items-start justify-content-start">
										<div>Bazar Ertəsi:</div>
										<div class="ml-auto">10:00am - 18:00pm</div>
									</li>
									<li class="d-flex flex-row align-items-start justify-content-start">
										<div>Çərşənbə Axşamı</div>
										<div class="ml-auto">10:00am - 18:00pm</div>
									</li>
									<li class="d-flex flex-row align-items-start justify-content-start">
										<div>Çərşənbə:</div>
										<div class="ml-auto">10:00am - 18:00pm</div>
									</li>
									<li class="d-flex flex-row align-items-start justify-content-start">
										<div>Cümə Axşamı:</div>
										<div class="ml-auto">10:00am - 18:00pm</div>
									</li>
									<li class="d-flex flex-row align-items-start justify-content-start">
										<div>Cümə:</div>
										<div class="ml-auto">10:00am - 18:00pm</div>
									</li>
									<li class="d-flex flex-row align-items-start justify-content-start">
										<div>Şənbə:</div>
										<div class="ml-auto">10:00am - 18:00pm</div>
									</li>
								</ul>
							</div>
						</div>

					</div>
				</div>
			</div><div class="footer_bar">
				<div class="container">
					<div class="row">
						<div class="col">
							<div class="footer_bar_content  d-flex flex-md-row flex-column align-items-md-center justify-content-start">
								<div class="copyright">
									<!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
									 &copy; Vusala Atakishiyeva <script>document.write(new Date().getFullYear());</script><a> All rights reserved </a>
									<!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
								</div>
								
							</div>
						</div>
					</div>
				</div>
			</div>
		</footer>
	</div>

	<script src="~/assets/js/jquery-3.2.1.min.js"></script>
	<script src="~/assets/styles/bootstrap-4.1.2/popper.js"></script>
